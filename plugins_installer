cd $VDRSRC; apt-get -y install libxml++2.6-dev libglibmm-2.4-dev;
   if [ -f menuorg/Makefile ];
       then  echo "Menuorg $Remind"
		else git clone https://projects.vdr-developer.org/git/vdr-plugin-menuorg.git && cp -rf vdr-plugin-menuorg /home/`logname`/Vdrrepo/ && mv -f vdr-plugin-menuorg menuorg && cd ../.. && make plugins && cd /etc/vdr/plugins && wget https://www.dropbox.com/s/bx13km4g9ogvgb8/menuorg.tar.gz && tar xzvf menuorg.tar.gz && mv -f menuorg.tar.gz /home/`logname`/Vdrrepo/ && sed -i "s|-P'dvbapi'|& -P'menuorg'|" /usr/local/bin/vdrrun
	fi;
cd /home/`logname`/Vdrrepo/; chmod -R 777 *; cd $SRC/vdr; make plugins install;
        echo "                    Press Enter to continue ...               "; read enterKey;;  
35a) 
clear
echo "        ***                Removing Vdr-Plugin-Menuorg               ***";  sleep 2
cd $VDRSRC && if [ -f menuorg/Makefile ];
  		then rm -rf menuorg && cd $LIB && rm -rf libvdr-menuorg.* && sed -i "s|-P'menuorg'||" /usr/local/bin/vdrrun && echo "Vdr-Plugin-Menuorg $Remind1 "
 			 else echo "Vdr-Plugin-Menuorg $Remind5" 
      	fi;
cd /home/`logname`/Vdrrepo/; chmod -R 777 *; cd $SRC/vdr; make plugins install;
        echo "                    Press Enter to continue ...               "; read enterKey;;




