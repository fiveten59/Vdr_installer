#############################################################################################################################

c)
clear
echo "        ***                Installing Vdr-Plugin-Upnp               ***";  sleep 2
cd $VDRSRC; apt-get install -y libboost-dev libsqlite3-dev libupnp-dev libtntdb-dev tntdb-sqlite4v5;
   if [ -f upnp/Makefile ];
       then  echo "Upnp $Remind"
		else git clone https://projects.vdr-developer.org/git/vdr-plugin-upnp.git; cp -rf vdr-plugin-upnp /home/`logname`/Vdrrepo/; mv vdr-plugin-upnp upnp cd upnp; wget https://www.dropbox.com/s/hgsv671o7aai2qm/patch_upnp.tar.gz; tar -zxvf patch_upnp.tar.gz; mv -f patch_upnp.tar.gz /home/`logname`/Vdrrepo/; patch -p1 < 10_upnp_vdr2.1.2.patch; patch -p1 < 11_upnp_httptnt.patch; patch -p1 < 12_upnp_lock.patch.vdr23; make; make subplugins; cd ../../..; make plugins; sed -i "s|-P'externalplayer'|& -P'upnp'|" /usr/local/bin/vdrrun 
    fi
cd /home/`logname`/Vdrrepo/; chmod -R 777 *; cd $SRC/vdr; make plugins install;
        echo "                    Press Enter to continue ...               "; read enterKey;;
#                                      $$$$$$$$$$$$$$$$$$ 
c1) 
clear
echo "        ***                Removing Vdr-Plugin-Upnp               ***";  sleep 2
cd $VDRSRC; if [ -f upnp/Makefile ];
  		then rm -rf upnp; cd $LIB; rm -rf libvdr-upnp.*; sed -i "s|-P'upnp'||" /usr/local/bin/vdrrun; echo "Vdr-Plugin-Upnp $Remind1 "
 			 else echo "Vdr-Plugin-Upnp $Remind5" 
      	fi;
cd /home/`logname`/Vdrrepo/; chmod -R 777 *; cd $SRC/vdr; make plugins install;
        echo "                    Press Enter to continue ...               "; read enterKey;;
#----------------------------------------------------------------------------------------------------------------------------------
z);; 
esac;;
#############################################################################################################################
#############################################################################################################################

9)                                        
    clear
    echo ""
    dialog --title "               ♦♦♦♦♦   Other Plugins ♦♦♦♦♦                    " --infobox "
              
   --------------------------------------------------------------------------------------------------------------------
                                     Install or Remove Other Plugins
   --------------------------------------------------------------------------------------------------------------------
        
        *****  Install  *****  .................................................  *****  Remove  *****

        [a]    Weatherforecast ...........................  [a1]    Weatherforecast
                         
        [z]    Skip

   -------------------------------------------------------------------------------------------------------------------- 
   -------------------------------------------------------------------------------------------------------------------- " 0 0
echo -n "        Enter your menu choice = Install [a] ~~ Remove [a1] ~~ Skip [z]:      "
read yourch
case $yourch in   
					##################
a) 
clear
echo "        ***                Installing Vdr-Plugin-Weatherforecast               ***";  sleep 2
cd $VDRSRC;  apt-get -y install libcurl4-openssl-dev libjansson-dev librsvg2-dev;
    if [ -f weatherforecast/Makefile ];
		then  echo "Vdr-Plugin-Weatherforecast $Remind"
			else git clone git://projects.vdr-developer.org/vdr-plugin-weatherforecast.git; cp -rf vdr-plugin-weatherforecast /home/`logname`/Vdrrepo/; mv vdr-plugin-weatherforecast weatherforecast; cd weatherforecast; wget https://www.dropbox.com/s/v0ipkt6x3bfbbs8/patch_weatherforecast.tar.gz; tar -zxvf patch_weatherforecast.tar.gz; mv -f patch_weatherforecast.tar.gz /home/`logname`/Vdrrepo/; patch -p1 < 10_weatherforecast_debug.patch; patch -p1 < 11_weatherforecast_i18n-it.patch; cd ../../..; make plugins; sed -i "s|-P'externalplayer'|& -P'weatherforecast'|" /usr/local/bin/vdrrun 
	fi;
cd /home/`logname`/Vdrrepo/; chmod -R 777 *; cd $SRC/vdr; make plugins install; 
        echo "                    Press Enter to continue ...               "; read enterKey;;
#                                      $$$$$$$$$$$$$$$$$$ 
a1) 
clear
echo "        ***                Removing Vdr-Plugin-Weatherforecast               ***";  sleep 2
cd $VDRSRC; if [ -f weatherforecast/Makefile ];
  	then rm -rf weatherforecast; cd $LIB; rm -rf libvdr-weatherforecast.*; sed -i "s|-P'tvguide'||" /usr/local/bin/vdrrun; echo "Vdr-Plugin-Weatherforecast $Remind1"
  			else echo "Vdr-Plugin-Weatherforecast $Remind5" 
	fi;
cd /home/`logname`/Vdrrepo/; chmod -R 777 *; cd $SRC/vdr; make plugins install;
        echo "                    Press Enter to continue ...               "; read enterKey;;
#----------------------------------------------------------------------------------------------------------------------------------
z);; 
esac;;
	  
#############################################################################################################################  
#############################################################################################################################
###                                                                                                                       ###
##                                                                                                                         ##
#                                                                                                                           #
10)                                       #########################################
                                          #                Exit/Stop              #
                                          #########################################    


    clear
    echo ""
    echo ""
    echo ""
    echo ""
    echo "                                                       .-----,        ,.----."
    echo "                                                .-----'       '------'       ',"
    echo "                                              ,'                              ',"
    echo "                                              '                             '"
    echo "                                              ',            First ed.        ,'"
    echo "                                              ,'          by fiveten_59 ®      ',"
