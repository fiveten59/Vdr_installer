  		then rm -rf scraper2vdr && rm -rf $PLUGINS/scraper2vdr && rm -rf $LIB/libvdr-scraper2vdr.* && sed -i "s|-P'scraper2vdr'||" /usr/local/bin/vdrrun && echo "$Remind1 Vdr-Plugins-Scraper2vdr"
