cd /home/`logname`
chmod -R 777 Vdr_repo
#
cd $SRC/vdr
make plugins install
#
echo "     Press Enter to continue ...               "; read enterKey;;
#
d1)
clear
echo "        ***                Removing Vdr-Plugin-Sothddevice-drm              ***"; sleep 2
cd $VDRSRC
if [ -f  softhddevice-drm/Makefile ]
echo "$Remind1 Vdr-Plugin-Sothddevice-drm"
sleep 2
then rm -rf softhddevice-drm
cd $LIB
rm -rf libvdr-softhddevice-drm.*
rm -rf /home/`logname`/Vdr_repo/softhddevice-drm
sed -i "s|-P'softhddevice-drm'||" /usr/local/bin/vdrrun
echo "                    Vdr-Plugin-Sothddevice-drm uninstalled"
sleep 2	
else echo "Vdr-Plugin-Sothddevice-drm $Remind5"
fi
#
cd /home/`logname`
chmod -R 777 Vdr_repo
#
cd $SRC/vdr
make plugins install
#
echo "                    Press Enter to continue ...               "; read enterKey;;
#
e)
clear
echo "        ***                Installing Vdr-Plugin-Sothddevice-drm-gles            ***"; sleep 2
apt-get -y install libglm-dev libxcb-screensaver0-dev libxcb-dpms0-dev 
apt-get -y install libxcb-ewmh-dev libva-dev libx265-dev libasound2-dev
apt-get -y install libgles2-mesa libgles2-mesa-dev libegl-mesa0
apt-get -y install libgbm-dev libglm-dev libpng-dev
cd $VDRSRC
if [ -f softhddevice-drm-gles/Makefile ]
then echo "Vdr-Plugin-Sothddevice-drm-gles $Remind5"
sleep 2	
else git clone https://github.com/rellla/vdr-plugin-softhddevice-drm-gles.git
cp -rf vdr-plugin-softhddevice-drm-gles /home/`logname`/Vdr_repo/
mv -f vdr-plugin-softhddevice-drm-gles softhddevice-drm-gles
cd softhddevice-drm-gles
make && make install
sed -i "s|-P'dvbapi'|& -P'softhddevice-drm-gles'|" /usr/local/bin/vdrrun
echo "                    Vdr-Plugin-Sothddevice-drm-gles installed"
sleep 2
fi
#		
cd /home/`logname`
chmod -R 777 Vdr_repo
#
cd $SRC/vdr
make plugins install
#
echo "     Press Enter to continue ...               "; read enterKey;;
#
e1)
clear
echo "        ***                Removing Vdr-Plugin-Sothddevice-drm-gles              ***"; sleep 2
cd $VDRSRC
if [ -f  softhddevice-drm-gles/Makefile ]
echo "$Remind1 Vdr-Plugin-Softhddevice-drm-gles"
sleep 2
then rm -rf softhddevice-drm-gles
cd $LIB
rm -rf libvdr-softhddevice-drm-gles.*
rm -rf /home/`logname`/Vdr_repo/softhddevice-drm-gles
