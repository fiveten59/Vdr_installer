apt-get -y install libexpat1 libexpat1-dev
cd $VDRSRC
if [ -f SkinNopacity/Makefile ]
then  echo "SkinNopacity $Remind"
sleep 2	
else git clone https://gitlab.com/kamel5/SkinNopacity.git
cp -rf SkinNopacity /home/`logname`/Vdr_repo/
cd SkinNopacity
make && make install
cd ../../..
make plugins install
sed -i "s|-P'iptv'|& -P'skinnopacity -l /etc/vdr/logos/'|" /usr/local/bin/vdrrun
echo "                    SkinNopacity installed"
sleep 2
fi
#
cd /home/`logname`
chmod -R 777 Vdr_repo
