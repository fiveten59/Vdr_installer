 " &&     
echo "              --------------------------------------" &&     echo "              --------------------------------------" &&     echo -n "        Show me your IR input number:                "; read key; echo    " -P'remote -i /dev/input/event$key'" >> /usr/local/bin/vdrrun_2; mv /usr/local/bin/vdrrun /usr/local/bin/vdrrun_1; cat /usr/local/bin/vdrrun_* | tr -d '\n' > /usr/local/bin/vdrrun; rm -rf /usr/local/bin/vdrrun_*; sed -i "s|--lirc||" /usr/local/bin/vdrrun; sed -i "s|bash|& \n|" /usr/local/bin/vdrrun
