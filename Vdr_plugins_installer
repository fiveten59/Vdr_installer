	then  echo "Remote $Remind"
	sleep 2
		else wget http://www.escape-edv.de/endriss/vdr/vdr-remote-0.7.0.tgz
		tar -xzvf vdr-remote-0.7.0.tgz
		mv remote-0.7.0 remote
