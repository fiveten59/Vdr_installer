echo "                    Vdr-Plugin-Sothddevice-drm-gles uninstalled"
sleep 2	
else echo "Vdr-Plugin-Sothddevice-drm-gles $Remind5"
fi
#		
cd /home/`logname`
chmod -R 777 Vdr_repo
#
cd $SRC/vdr
make plugins install
#
echo "     Press Enter to continue ...               "; read enterKey;;
#
f)
clear
echo "        ***                Installing Vdr-Plugin-Rpihddevice               ***"; sleep 2
clear
echo "
*****    IMPORTANT *******
For only Rpi4 you need userland libs and insert
' LD_LIBRARY_PATH=/opt/vc/lib
export LD_LIBRARY_PATH '
at the beginning of vdrrun"
sleep 6
clear
cd $SRC
if [ -f /opt/vc/lib/libvcos.so ]; then
echo " Userland is already installed"
sleep 2  
else
git clone https://github.com/raspberrypi/userland.git
cp -rf /$SRC/userland /home/`logname`/Vdr_repo/
cd userland
./buildme
fi
#
cd $VDRSRC
if [ -f rpihddevice/Makefile ]
then echo "Vdr-Plugin-Rpihddevice $Remind5"
sleep 2
else git clone https://github.com/vdr-projects/vdr-plugin-rpihddevice.git
cp -rf vdr-plugin-rpihddevice /home/`logname`/Vdr_repo/
mv vdr-plugin-rpihddevice rpihddevice
cd rpihddevice
make && make install
sed -i "s|-P'dvbapi'|& -P'rpihddevice -o 5'|" /usr/local/bin/vdrrun
echo "                    Vdr-Plugin-Rpihddevice installed"
sleep 2
fi
# 
cd /home/`logname`
chmod -R 777 Vdr_repo
#
cd $SRC/vdr
make plugins install
#
echo "     Press Enter to continue ...               "; read enterKey;;
#
f1)
clear
echo "        ***                Removing Vdr-Plugin-Rpihddevice               ***"; sleep 2
cd $VDRSRC
if [ -f rpihddevice/Makefile ]
echo "$Remind1 Vdr-Plugin-Rpihddevice"
sleep 2
then rm -rf rpihddevice
cd $LIB
rm -rf libvdr-rpihddevice.*
sed -i "s|-P'rpihddevice -o 5'||" /usr/local/bin/vdrrun
echo "                    Vdr-Plugin-Rpihddevice uninstalled"
sleep 2		
else echo "Vdr-Plugin-Rpihddevice $Remind5"
fi
#
cd /home/`logname`
chmod -R 777 Vdr_repo
#
cd $SRC/vdr
make plugins install
#
echo "                    Press Enter to continue ...               "; read enterKey;;
#
z);;
esac;;

###########################################################################################################
2)
clear
echo ""
