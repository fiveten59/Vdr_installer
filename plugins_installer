  #!/bin/bash
############################## !!! IMPORTANTE !!! #######################################
#                                                                                       #
# Script name : plugins_installer (only for vdr = or > 2.4.0                            #
# Version: Github Repository Master (https://github.com/fiveten59/plugins_installer)    #
#                                                                                       #
# chmod the script                                                                      #
# then load it simply typing: sudo ./plugins_installer                                  #
#                                                                                       #
#########################################################################################
# 
#
ETC='/usr/local/etc'
SRC='/usr/local/src'
SRCVDR='/usr/local/src/vdr-2.4.0'
VDRSRC=''$SRC'/vdr/PLUGINS/src'
LIB='/usr/local/lib/vdr/plugins'
VDR='vdr-2.4.0'
PACKAGES="/usr/local/src/packages"
SKINS='/usr/local/share/vdr/plugins/skindesigner/skins/'
SHARE='/usr/local/share/vdr/plugins'
Xinelib='sudo /etc/init.d/vdr start > /dev/null 2>&1; while ! netcat -z localhost 37890; do sleep 2; vdr-sxfe --video=vdpau --hud --audio=alsa --aspect=16:9 --width=1920 --height=1080 --fullscreen --daemon --reconnect --post=tvtime:method=Linear,cheap_mode=1,pulldown=0,use_progressive_frame_flag=1 --buffers=850; done;'
PLUGINS='/etc/vdr/plugins'
Remind='is already installed'
Remind1='Removed'
Remind4='are already installed'
Remind5='is not installed'
ALLOWED="#
# allowed_hosts.conf  This file describes a number of host addresses that
#                     are allowed to connect to the streamdev/vn****rver/xvdr/xinelioutput server running 
#                     with the Video Disk Recorder (VDR) on this system.
# Syntax:
#
# IP-Address[/Netmask]
#
127.0.0.1             # always accept localhost
192.168.1.0/24        # any host on the local net
192.168.0.0/24        # any host on the local net
#204.152.189.113      # a specific host
#0.0.0.0/0            # any host on any net (USE THIS WITH CARE!)
#
#
# If your network setup is correct pls don't touch
# exit with CTRL+X
#
# If your network setup is diiferent change it and
# Save it with CTRL+O and exit with CTRL+X "
                                          ###############################################
                                          #              Install Vdr Plugins            #
                                          ###############################################
                                                                                                           
#
    while :
    do
    dialog --title " Plugin Installer Script " --infobox "Copyright (C) 2018
                                                                        
    This file is part of VDR Complete Installer (VCI).                   
                                                                        
    VCI is free software: you can redistribute it and/or modify          
    it under the terms of the GNU General Public License as published by 
    the Free Software Foundation, either version 3 of the License, or    
    (at your option) any later version.                                  
                                                                        
    VCI is distributed in the hope that it will be useful,               
    but WITHOUT ANY WARRANTY; without even the implied warranty of       
    MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the        
    GNU General Public License for more details.                         
                                                                        
    You should have received a copy of the GNU General Public License    
    along with VCI. see the file VCI_License.GPL, If not see             
    <http://www.gnu.org/licenses/>.                                   
                                                                        
    Credit                                     
    =====================================                     
                                                                               
    Questo script e' stato creato per installare VDR in ambiente grafico        
    con l'aiuto di tutta la comunità vdr che conosco e tutta la loro esperienza   
    percio e' molto importante dare a loro credito          

    A special thanks goes to Klaus Schmidinger Vdr Developer     

    Ringraziamenti :                             
    a tutti gli user del sifteam forum e di vdritalia
    
    IN PARTICOLARE :                                
    Mona, Unixer, fiveten_59, Grazymax, Knap, jackblow33, Alez, Shalafi, Homer314, 
    Mr Cool Span, fusibile73, ceo16, Asgarot, Armando Basile, daredavil87, 
    Mld Team and many ... many oyhers.                             
                                                                              
    =====================================                     " 0 0
    echo "                    Press Enter to continue ...               "; read enterKey
    
    #
    #    
    dialog --title " Plugin Installer Script " --infobox "Copyright (C) 2018
    

	Script name: plugins_installer                                                  
	Version: Github Repository Master  (https://github.com/fiveten59/Vdr_installer)                                                     
                                                                                              
	chmod the script
	then load it simply typing: sudo ./plugins_installer
                                                                                       
                                                               " 0 0

###########################################################################################################

    echo "                    Press Enter to continue ...               "; read enterKey
    #
    #
    clear
    echo ""
    dialog --title "               ♦♦♦♦♦   Plugin Installer Script  ♦♦♦♦♦                    " --infobox "
          ╭========================================================================================╮    
          |   ..................    ♦♦♦   Install & Remove Plugins   ♦♦♦ ...............................|
          |   ''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''' |
          |   ....*****  Install  *****  ....................  *****  Remove  ***** ............... |
          |....................................................................................... |
          | [1]    Softhddevice-openglosd  ................[1a]   Softhddevice-openglosd ............ |
          | [2]    Softhddevice  (Vpp support)  ...........[2a]   Softhddevice (Vpp support) ........ |
          | [3]    Vaapidevice  ...........................[3a]   Vaapidevice ....................... |                       
          | [4]    Xineliboutput ..........................[4a]   Xineliboutput ..................... |     
          | [5]    Femon ..................................[5a]   Femon ............................. |     
          | [6]    Osd2web ................................[6a]   Osd2web ........................... |          
          | [7]    Satip  .................................[7a]   Satip  ............................ | 
          | [8]    Channelscan  ...........................[8a]   Channelscan ....................... |               
          | [9]    Osdteletext  ...........................[9a]   Osdteletext ....................... |               
          |[10]    Ttxsubs (only Vdr 2.2.0)  .............[10a]   Ttxsubs (only Vdr 2.2.0) .......... |               
          |[11]    Image (only Vdr 2.2.0)  ...............[11a]   Image (only Vdr 2.2.0) ............ |               
          |[12]   Mpv  ..................................[12a]   Mpv ............................... |               
          |[13]   Radio  ................................[13a]   Radio ............................. |               
          |[14]   Scraper2Vdr  ..........................[14a]   Scraper2Vdr ....................... |               
          |[15]   Vnsiserver  ...........................[15a]   Vnsiserver ........................ |               
          |[16]   StreamDev  ............................[16a]   StreamDev ......................... |               
          |[17]   Manager  ..............................[17a]   Manager ........................... |               
          |[18]   Wirbelscan  ...........................[18a]   Wirbelscan ........................ |
          |[19]   Neutrinoepg  ..........................[19a]   Neutrinoepg ....................... |
          |[20]   Dvbapi  ...............................[20a]   Dvbapi ............................ |
          |[21]   Epgsearch  ............................[21a]   Epgsearch ......................... | 
          |[22]   Skindesigner  .........................[22a]   Skindesigner ...................... | 
          |[23]   TvGuideng  ............................[23a]   TvGuideng ......................... | 
          |[24]   TvGuide  ..............................[24a]   TvGuide ........................... | 
          |[25]   Weatherforecast  ......................[25a]   Weatherforecast ................... | 
          |[26]   Skinflatplus  .........................[26a]   Skinflatplus ...................... | 
          |[27]   Iptv  .................................[27a]   Iptv .............................. |  
          |[28]   ExternalPlayer  .......................[28a]   ExternalPlayer .................... |  
          |[29]   Systeminfo  ...........................[29a]   Systeminfo ........................ | 
          |[30]   Live  .................................[30a]   Live .............................. |
          |[31]   Channellscan  .........................[31a]   Channellscan ...................... |
          |[32]   Epg2vdr  ..............................[32a]   Epg2vdr ........................... |
          |[33]   Upnp  .................................[33a]   Upnp .............................. |
          |[34]   CecRemote  ............................[34a]   CecRemote ......................... |
          |[35]   Menuorg  ..............................[35a]   Menuorg ........................... |

          |[36]     ..............................[36a]    ........................... |
          |[37]     ..............................[37a]    ........................... |
          ╭========================================================================================╮                                
          |   [50]    Exit  ..........................................................................|  
          ╰========================================================================================╯" 0 0
#   -  -  -  -  
    echo -n "              Enter your menu choice = Submenu [1~37] -- Exit [50] :        "
    read yourch
    case $yourch in
################################################################################################################################################################
################################################################################################################################################################
1) 
clear
echo "        ***                Installing Vdr-Plugin-Softhddevice-Openglosd               ***";  sleep 2
cd $VDRSRC;
apt-get -y install libx11-xcb-dev libxcb-dpms0-dev libxcb-glx0-dev libxcb-randr0-dev libglm-dev
apt-get -y install libxcb-screensaver0-dev libxcb-xv0-dev libxcb-image0-dev libxcb-util0-dev
apt-get -y install libxcb-icccm4-dev libxcb-keysyms1-dev libxcb-ewmh-dev libasound2-dev libvdpau1 libvdpau-dev
apt-get -y install libxext6 libxext-dev libc6-dev zlib1g zlib1g-dev libogg0 libva-dev libglew-dev
if [ -f softhddevice/Makefile ];
   		then wget https://github.com/rellla/softhddevice-openglosd/archive/jinx.tar.gz && cp -rf jinx.tar.gz /home/`logname`/Vdrrepo/ && tar -zxvf jinx.tar.gz && rm -rf jinx.tar.gz && mv softhddevice-openglosd-jinx softhddevice && cd softhddevice && wget https://www.dropbox.com/s/qwi8p6ieb5z86gr/patch_softhddevice_5.tar.gz && tar -zxvf patch_softhddevice_5.tar.gz && mv -f patch_softhddevice_5.tar.gz /home/`logname`/Vdrrepo/ && patch -p1 < 03_LanguageIT.patch && patch -p1 < 10_softhddevice_trusty.patch && patch -p1 < 11_softhddevice_Makefile.patch && patch -p1 < 13_softhddevice_fixmemleakvaapi.patch && patch -p1 < 14_softhddevice_vaapi100.patch && patch -p1 < 16_softhddevice_no-inactive-reset-on-attache.patch && patch -p1 < 17_fsigned_hide-buffer-empty-message.patch && make ALSA=1 OSS=0 VDPAU=1 VAAPI=0 SCREENSAVER=0 SWRESAMPLE=1 && make install && sed -i "s|--lirc|& -P'softhddevice -f -v vdpau'|" /usr/local/bin/vdrrun 
      fi;
cd /home/`logname`/Vdrrepo/; chmod -R 777 *; cd $SRC/vdr; make plugins install;
      echo "                    Press Enter to continue ...               "; read enterKey;;
1a) 
clear
echo "        ***                Removing Vdr-Plugin-Softhddevice-Openglosd               ***";  sleep 2
cd $VDRSRC && if [ -f softhddevice/Makefile ];
   		then rm -rf softhddevice && cd $LIB && rm -rf libvdr-softhddevice.* && sed -i "s|-P'softhddevice -f -v vdpau'||" /usr/local/bin/vdrrun && echo "Vdr-Plugin-Softhddevice $Remind1"
   			else echo "Softhddevice-openglosd $Remind5" 
      fi;
cd /home/`logname`/Vdrrepo/; chmod -R 777 *; cd $SRC/vdr; make plugins install;
      echo "                    Press Enter to continue ...               "; read enterKey;;

################################################################################################################################################################
################################################################################################################################################################
2) 
clear
echo "        ***                Installing Vdr-Plugin-Softhddevice (Vpp support)               ***";  sleep 2
cd $VDRSRC;
apt-get -y install libx11-xcb-dev libxcb-dpms0-dev libxcb-glx0-dev libxcb-randr0-dev libglm-dev unzip;
apt-get -y install libxcb-screensaver0-dev libxcb-xv0-dev libxcb-image0-dev libxcb-util0-dev;
apt-get -y install libxcb-icccm4-dev libxcb-keysyms1-dev libxcb-ewmh-dev libasound2-dev libvdpau1 libvdpau-dev;
apt-get -y install libxext6 libxext-dev libc6-dev zlib1g zlib1g-dev libogg0 libva-dev libglew-dev;
if [ -f vaapidevice/Makefile ];
       then  echo "Vdr-Plugin-Softhddevice (Vpp support) $Remind"
   		else wget https://www.dropbox.com/s/mpzeptpzwdszcx9/vdr-plugin-vaapidevice-vpp_support.zip && unzip vdr-plugin-vaapidevice-vpp_support.zip && rm -rf vdr-plugin-vaapidevice-vpp_support.zip && mv vdr-plugin-vaapidevice-vpp_support vaapidevice && cd vaapidevice && cp -rf /home/`logname`/Vdrrepo/patch_softhddevice_5.tar.gz /$VDRSRC/vaapidevice && tar -zxvf patch_softhddevice_5.tar.gz && rm -rf patch_softhddevice_5.tar.gz && patch -p1 < 03_LanguageIT.patch; patch -p1 < 11_softhddevice_Makefile.patch && patch -p1 < 16_softhddevice_no-inactive-reset-on-attache.patch && patch -p1 < 17_fsigned_hide-buffer-empty-message.patch && make && make install && sed -i "s|--lirc|& -P'softhddevice -f -v vdpau'|" /usr/local/bin/vdrrun 
      fi;
cd /home/`logname`/Vdrrepo/; chmod -R 777 *; cd $SRC/vdr; make plugins install;
      echo "                    Press Enter to continue ...               "; read enterKey;;
2a) 
clear
echo "        ***                Removing Vdr-Plugin-Softhddevice (Vpp support)               ***";  sleep 2
cd $VDRSRC && if [ -f vaapidevice/Makefile ];
   		then rm -rf vaapidevice && cd $LIB && rm -rf libvdr-vaapidevice.* && sed -i "s|-P'softhddevice -f -v vdpau'||" /usr/local/bin/vdrrun && echo "Vdr-Plugin-Softhddevice (Vpp support) $Remind1"
   			else echo "Vdr-Plugin-Softhddevice (Vpp support) $Remind5" 
      fi;
cd /home/`logname`/Vdrrepo/; chmod -R 777 *; cd $SRC/vdr; make plugins install;
        echo "                    Press Enter to continue ...               "; read enterKey;;


################################################################################################################################################################
################################################################################################################################################################
3) 
clear
echo "        ***                Installing Vdr-Plugin-Vaapidevice               ***";  sleep 2
cd $VDRSRC &&
 if [ -f vaapidevice/Makefile ];
  		then  echo "Vdr-Plugin-Vaapidevice $Remind"
			else git clone https://github.com/rofafor/vdr-plugin-vaapidevice.git && cp -rf vdr-plugin-vaapidevice /home/`logname`/Vdrrepo/ && mv vdr-plugin-vaapidevice vaapidevice && cd vaapidevice &&  make && make install && sed -i "s|--lirc|& -P'vaapidevice -f'|" /usr/local/bin/vdrrun
		fi
# wget https://www.dropbox.com/s/vjmoi44yikr5k6q/patch_softhddevice_openglosd.tar.gz && tar -zxvf patch_softhddevice_openglosd.tar.gz && mv -f patch_softhddevice_openglosd.tar.gz /home/`logname`/Vdrrepo/ && patch -p1 < 10_softhddevice_ffmpeg3.patch &&
        echo "                 Press Enter to continue ...               "; read enterKey;;
3a) 
clear
echo "        ***                Removing Vdr-Plugin-Vaapidevice               ***";  sleep 2
cd $VDRSRC && if [ -f vaapidevice/Makefile ];
   		then rm -rf vaapidevice && cd $LIB && rm -rf libvdr-vaapidevice.* && sed -i "s|-P'vaapidevice -f'||" /usr/local/bin/vdrrun  && echo "Vdr-Plugin--Vaapidevice $Remind1"
   			else echo "Vdr-Plugin-Vaapidevice $Remind5" 
      fi;
cd /home/`logname`/Vdrrepo/; chmod -R 777 *; cd $SRC/vdr; make plugins install;
      echo "                    Press Enter to continue ...               "; read enterKey;;


################################################################################################################################################################
################################################################################################################################################################
4)  
clear
echo "        ***                Installing Vdr-Plugin-Xineliboutput               ***";  sleep 2
cd $VDRSRC; apt-get -y install autopoint libxine2-dev libxrender-dev libextractor-dev libxrandr-dev libxine2-ffmpeg mjpegtools;
if [ -f $PACKAGES/libxine2*.deb ]; then
    echo "Xine-lib $Remind"; 
    	else cd $SRC && wget http://sourceforge.net/projects/xine/files/xine-lib/1.2.9/xine-lib-1.2.9.tar.xz && tar -xJf xine-lib-1.2.9.tar.xz && mv xine-lib-1.2.9 xine-lib && rm -rf xine-lib-1.2.9.tar.xz && cd xine-lib && export LD_LIBRARY_PATH=/usr/local/lib:$LD_LIBRARY_PATH && ./autogen.sh --disable-dxr3 --enable-w32dll --with-pic --with-w32-path=/usr/local/lib/win32 && make -j4 && checkinstall --fstrans=no --install=yes --pkgname=libxine2 --pkgversion "1.2.9-git" --pakdir=$PACKAGES --default
	fi 
 if [ -f xineliboutput/Makefile ];
  then  echo "VDR-Plugin-Xineliboutput $Remind" 
else 
git clone https://github.com/vdr-projects/vdr-plugin-xineliboutput.git && cp -rf vdr-plugin-xineliboutput /home/`logname`/Vdrrepo/ && mv -f vdr-plugin-xineliboutput xineliboutput && cd xineliboutput && make && make install && cd ../../.. && make plugins && mkdir -p /etc/vdr/plugins/xineliboutput && cp -rf /usr/local/src/vdr/PLUGINS/src/xineliboutput/*.mpg /etc/vdr/plugins/xineliboutput && cp -rf /usr/local/src/vdr/PLUGINS/src/xineliboutput/examples/remote.conf.example /etc/vdr/plugins/xineliboutput/remote.conf && sed -i "s|--lirc|& -P'xineliboutput -l none -r 37890 -p'|" /usr/local/bin/vdrrun && echo "*** allowed_hosts.conf setup ***" && touch /etc/vdr/plugins/xineliboutput/allowed_hosts.conf && echo "$ALLOWED" >> /etc/vdr/plugins/xineliboutput/allowed_hosts.conf && rm -rf /usr/local/bin/start-xinelib-vdr.sh && touch /usr/local/bin/start-xinelib-vdr.sh && 
echo "#!/bin/sh
"$Xinelib"" >> /usr/local/bin/start-xinelib-vdr.sh && chmod a+x /usr/local/bin/start-xinelib-vdr.sh && touch /home/`logname`/Scrivania/Xinelib.desktop &&
echo "[Desktop Entry]
Version=1.0
Encoding=UTF-8
Type=Application
Name=Vdr-Xineliboutput
Description=avvio di Vdr-Xineliboutput
Icon=/usr/local/src/icone/vdrlogo.png
Exec=/usr/local/bin/start-xinelib-vdr.sh
" >> /home/`logname`/Scrivania/Xinelib.desktop && sudo chmod 777 /home/`logname`/Scrivania/Xinelib.desktop && cp -rf /home/`logname`/Scrivania/Xinelib.desktop /usr/share/applications/Xinelib.desktop;
	fi;
cd /home/`logname`/Vdrrepo/; chmod -R 777 *; cd $SRC/vdr; make plugins install;
	echo "                    Press Enter to continue ...               "; read enterKey;;
4a) 
clear
echo "        ***                Removing Vdr-Plugin-Xineliboutput               ***";  sleep 2
cd $VDRSRC;
 if [ -f xineliboutput/Makefile ];
   		then 
rm -rf xineliboutput && cd $LIB && rm -rf libvdr-xineliboutput.* && rm -rf libxineliboutput*.* && cd $PLUGINS && rm -rf xineliboutput && sed -i "s|-P'xineliboutput -l none -r 37890 -p'||" /usr/local/bin/vdrrun && sed -i "s|-P'lirc'|& -P'softhddevice -f'|" /usr/local/bin/vdrrun && rm -rf /home/`logname`/Scrivania/Xinelib.desktop && rm -rf /usr/share/applications/Xinelib.desktop && rm -rf /usr/local/bin/start-xinelib-vdr.sh 
                       else echo "VDR-Plugin-Xineliboutput $Remind5" 
      	fi;
cd /home/`logname`/Vdrrepo/; chmod -R 777 *; cd $SRC/vdr; make plugins install;
	echo "                    Press Enter to continue ...               "; read enterKey;;
################################################################################################################################################################
################################################################################################################################################################
5) 
clear
echo "        ***                Installing Vdr-Plugin-Femon               ***";  sleep 2
cd $VDRSRC
 if [ -f femon/Makefile ];
  		then  echo "Vdr-Plugin-Femon $Remind"
			else git clone https://github.com/rofafor/vdr-plugin-femon.git && cp -rf vdr-plugin-femon /home/`logname`/Vdrrepo/ && mv vdr-plugin-femon femon && cd ../.. && make plugins && sed -i "s|-P'externalplayer'|& -P'femon'|" /usr/local/bin/vdrrun;
	fi;
cd /home/`logname`/Vdrrepo/; chmod -R 777 *; cd $SRC/vdr; make plugins install;
        echo "                    Press Enter to continue ...               "; read enterKey;;
5a) 
clear
echo "        ***                Removing Vdr-Plugin-Femon               ***";  sleep 2
cd $VDRSRC 
if [ -f femon/Makefile ];
   		then rm -rf femon && cd $LIB && rm -rf libvdr-femon.* && sed -i "s|-P'femon'||" /usr/local/bin/vdrrun && echo "Vdr-Plugin-Femon $Remind1"
   			else echo "Vdr-Plugin-Femon $Remind5" 
      	fi;
cd /home/`logname`/Vdrrepo/; chmod -R 777 *; cd $SRC/vdr; make plugins install;
        echo "                    Press Enter to continue ...               "; read enterKey;;  
################################################################################################################################################################
################################################################################################################################################################
6) 
clear
echo "        ***                Installing Vdr-Plugin-Osd2web               ***";  sleep 2
cd $VDRSRC;  apt-get -y install libtinyxml2-dev libexif-dev cmake; 
cd $SRC; git clone https://github.com/warmcat/libwebsockets.git; cd libwebsockets; mkdir -p build; cd build; cmake ..; make; make install;
if [ -f osd2web/Makefile ];
  then  echo "Vdr-Plugin-Osd2web $Remind"
		else cd $VDRSRC && git clone https://github.com/horchi/vdr-plugin-osd2web.git && cp -rf vdr-plugin-osd2web /home/`logname`/Vdrrepo/ && mv -f vdr-plugin-osd2web osd2web && cd osd2web && wget https://www.dropbox.com/s/9m11810xk497wik/patch_osd2web.tar.gz && tar -zxvf patch_osd2web.tar.gz && mv -f patch_osd2web.tar.gz /home/`logname`/Vdrrepo/ && patch -p1 < osd2web_vdr-2.3.8_compat.diff && make install && cd ../../.. && make plugins && sed -i "s|-P'externalplayer'|& -P'osd2web -l /etc/vdr/logos/'|" /usr/local/bin/vdrrun
	fi;
cd /home/`logname`/Vdrrepo/; chmod -R 777 *; cd $SRC/vdr; make plugins install;
        echo "                    Press Enter to continue ...               "; read enterKey;;  
6a) 
clear
echo "        ***                Removing Vdr-Plugin-Osd2web               ***";  sleep 2
cd $VDRSRC && if [ -f osd2web/Makefile ];
   		then rm -rf osd2web && cd $PLUGINS && rm -rf osd2web && cd $LIB && rm -rf libvdr-osd2web.* && sed -i "s|-P'osd2web -l /etc/vdr/logos/'||" /usr/local/bin/vdrrun && echo "Vdr-Plugin-Osd2web $Remind1"
   			else echo "Vdr-Plugin-Osd2web $Remind5" 
	fi;
cd /home/`logname`/Vdrrepo/; chmod -R 777 *; cd $SRC/vdr; make plugins install;
        echo "                    Press Enter to continue ...               "; read enterKey;;  
################################################################################################################################################################
################################################################################################################################################################
7) 
clear
echo "        ***                Installing Vdr-Plugin-Satip               ***";  sleep 2
cd $VDRSRC; apt-get -y install libpugixml1 libpugixml-dev;
   if [ -f satip/Makefile ];
  		then  echo "Vdr-Plugin-Satip $Remind"
			else git clone https://github.com/rofafor/vdr-plugin-satip.git && cp -rf vdr-plugin-satip /home/`logname`/Vdrrepo/ && mv -f vdr-plugin-satip satip && cd ../.. && make plugins && sed -i "s|-P'externalplayer'|& -P'satip'|" /usr/local/bin/vdrrun
	fi;
cd /home/`logname`/Vdrrepo/; chmod -R 777 *; cd $SRC/vdr; make plugins install;
        echo "                    Press Enter to continue ...               "; read enterKey;;
7a) 
clear
echo "        ***                Removing Vdr-Plugin-Satip               ***";  sleep 2
cd $VDRSRC && if [ -f satip/Makefile ];
  		then rm -rf satip && cd $LIB && rm -rf libvdr-satip.* && sed -i "s|-P'satip'||" /usr/local/bin/vdrrun && echo "Vdr-Plugin-Satip $Remind1"
  			else echo "Vdr-Plugin-Sat-Ip $Remind5" 
      fi;
cd /home/`logname`/Vdrrepo/; chmod -R 777 *; cd $SRC/vdr; make plugins install;
        echo "                    Press Enter to continue ...               "; read enterKey;;  
################################################################################################################################################################
################################################################################################################################################################
8) 
clear
echo "        ***                Installing Vdr-Plugin-Channelscan               ***";  sleep 2
